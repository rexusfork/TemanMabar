<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_queue">

        <TextView
            android:id="@+id/txt_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginTop="7dp"
            android:layout_marginStart="20dp">
        </TextView>

        <ImageView
            android:id="@+id/cylooo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/txt_player"
            android:background="@drawable/profilepic"
            android:layout_marginStart="20dp">
        </ImageView>

        <TextView
            android:id="@+id/player_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1 want to play"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginTop="35dp"
            android:layout_marginStart="85dp">
        </TextView>

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="Yes"
            android:textAllCaps="false"
            android:layout_marginStart="220dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_btn_yes">
        </Button>

        <Button
            android:id="@+id/btn_no"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="No"
            android:textAllCaps="false"
            android:layout_marginStart="280dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_btn_no">
        </Button>

    </RelativeLayout>

</androidx.cardview.widget.CardView>